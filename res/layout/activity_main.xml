<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VirtualScavengerHunt" >

    
     <TextView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#000000"
        android:gravity="center"
        android:text="Virtual Scavenger Hunt"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/instruction"
        android:layout_marginBottom="34dp"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/randomChallenge"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton1"
        android:layout_alignRight="@+id/title"
        android:layout_marginBottom="28dp"
        android:text="Random Scavenger Challenge" />

    <Button
        android:id="@+id/instruction"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/randomChallenge"
        android:layout_centerVertical="true"
        android:text="Instructions" />

    <Button
        android:id="@+id/mainChallenges"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/instruction"
        android:layout_alignLeft="@+id/instruction"
        android:layout_marginBottom="20dp"
        android:text="Main Challenges" 
        android:visibility="gone"/>

</RelativeLayout>